	<profiles>

		<profile>
			<id>spring-next</id>
			<properties>
				<reactor.version>2020.0.8-SNAPSHOT</reactor.version>
				<spring-bom.version>5.3.8-SNAPSHOT</spring-bom.version>
				<spring-security-bom.version>5.5.1-SNAPSHOT</spring-security-bom.version>
